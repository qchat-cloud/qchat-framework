{
    "name": "qchat-cloud/framework",
    "type": "library",
    "keywords": [
        "php",
        "hyperf",
        "mochat",
        "framework"
    ],
    "description": "framework of qchat-cloud",
    "autoload": {
        "psr-4": {
            "QChat\\Framework\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "ext-swoole": ">=4.5"
    },
    "require-dev": {
        "96qbhy/hyperf-auth": "^2.2",
        "friendsofphp/php-cs-fixer": "^2.14",
        "hyperf/framework": "2.2.*",
        "hyperf/testing": "2.2.*",
        "overtrue/wechat": "~4.0",
        "phpstan/phpstan": "^0.12",
        "swoole/ide-helper": "dev-master",
        "hyperf/guzzle": "2.2.*"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "QChat\\Framework\\ConfigProvider"
        }
    }
}
